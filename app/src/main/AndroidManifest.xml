<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.java_lang_programming.android_recycleview_demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".provider.ItemSearchRecentSuggestionsProvider"
            android:authorities="com.java_lang_programming.android_recycleview_demo.provider.ItemSearchRecentSuggestionsProvider"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.RecyclerViewSwipeActivity"
            android:label="@string/title_activity_recycler_view_swipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".article19.RecyclerViewDividerLineActivity"
            android:label="@string/title_activity_recycler_view_divider_line"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.CustomRecyclerViewActivity"
            android:label="@string/title_activity_custom_recycler_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.AutoScrollRecyclerViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.FooterRecyclerViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.SearchRecyclerViewActivity"
            android:label="@string/title_activity_search_recycler_view"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".article79.RecyclerViewDividerItemDecorationActivity"
            android:label="@string/title_activity_recycler_view_divider_item_decoration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".article82.RecyclerViewGooglePlusActivity"
            android:label="@string/title_activity_recycler_view_google_plus"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>