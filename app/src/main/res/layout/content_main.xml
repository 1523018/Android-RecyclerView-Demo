<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.java_lang_programming.android_recycleview_demo.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/recyclerView_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView" />

    <Button
        android:id="@+id/recyclerView_swiped_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_btn"
        android:text="RecyclerView swiped" />

    <Button
        android:id="@+id/recyclerView_divider_line_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_swiped_btn"
        android:text="RecyclerView divider_line" />

    <Button
        android:id="@+id/custom_recyclerView_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_divider_line_btn"
        android:text="CustomRecyclerView" />

    <Button
        android:id="@+id/auto_scroll_recyclerView_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_recyclerView_btn"
        android:text="AutoScrollRecyclerView" />

    <Button
        android:id="@+id/footer_recyclerView_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auto_scroll_recyclerView_btn"
        android:text="FooterRecyclerView" />

    <Button
        android:id="@+id/search_recyclerView_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/footer_recyclerView_btn"
        android:text="SearchRecyclerView" />

    <Button
        android:id="@+id/recyclerView_divider_item_decoration_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_recyclerView_btn"
        android:text="DividerItemDecoration" />

    <Button
        android:id="@+id/recyclerView_googlePlus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_divider_item_decoration_btn"
        android:text="RecyclerViewGooglePlus" />

</RelativeLayout>
